<?xml version="1.0" encoding="UTF-8"?>
	<widget xmlns = "http://www.w3.org/ns/widgets"
		xmlns:gap = "http://phonegap.com/ns/1.0"
		id        = "com.kubicue.seaheld"
		versionCode=""
		version   = "1.0">
	 <name>Seaheld App</name>
    <description>
        Seaheld is an application for small craft and unmotorized boaters. 
        It allows them to have essential navigation and weather tools. 
    </description>
    <author email="support@kubicue.com" href="http://kubicue.com">
        Seaheld Team
    </author>
	  <preference name="phonegap-version" value="" />
		<preference name="orientation" value="portrait" />
		<preference name="target-device" value="universal" />
		<preference name="fullscreen" value="true" />
		<preference name="webviewbounce" value="true" />
		<preference name="prerendered-icon" value="true" />
		<preference name="stay-in-webview" value="true" />
		<preference name="detect-data-types" value="true" />
		<preference name="exit-on-suspend" value="true" />
		<preference name="show-splash-screen-spinner" value="true" />
		<preference name="auto-hide-splash-screen" value="true" />
		<preference name="disable-cursor" value="true" />
		<preference name="android-minSdkVersion" value="3" />
		<preference name="android-installLocation" value="auto" />
		<preference name="splash-screen-duration" value="2000" />
	  <preference name="SplashScreenDelay" value="1000" />
		<preference name="load-url-timeout" value="0" />
		<preference name="stay-in-webview" value="true" />
    <content src="index.html" />
		<icon src="icon.png" />
    <access origin="*" />
		<access origin="http://maps.google.com/maps/api/js?sensor=false"/>
    <access origin="https://api.forecast.io/forecast/8b0e1f8b53a5e7e0e6b2a1b2ced3ceda/32.7150,-117.1625"/>
		<gap:plugin name="cordova-plugin-whitelist" source="npm" spec="1.2.2" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <feature name="http://api.phonegap.com/1.0/geolocation" /> 
	  <gap:plugin name="org.apache.cordova.geolocation" source="pgb" spec="0.3.12"/>
  </widget>
